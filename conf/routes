# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET    /recipe/:recipelId          controllers.RecipeController.getRecipe(recipelId: Long)

GET    /recipes                    controllers.RecipeController.getRecipes()

POST   /recipe                     controllers.RecipeController.newRecipe()

GET    /ingredient/:ingredientId          controllers.IngredientController.getIngredient(ingredientId: Long)

GET    /ingredients                   controllers.IngredientController.getIngredients()

POST   /ingredient                    controllers.IngredientController.newIngredient()

POST   /newTask                   controllers.TaskController.newTask()

GET    /task/:taskId          controllers.TaskController.getTask(taskId: Long)

GET    /recipe/:recipeId/tasks                   controllers.TaskController.getTasks(recipeId: Long)


